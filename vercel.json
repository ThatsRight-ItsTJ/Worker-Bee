{
  "version": 2,
  "builds": [
    {
      "src": "backend_server.py",
      "use": "@vercel/python"
    },
    {
      "src": "openoperator-ui/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend_server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/openoperator-ui/dist/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  },
  "functions": {
    "backend_server.py": {
      "maxDuration": 300
    }
  }
}