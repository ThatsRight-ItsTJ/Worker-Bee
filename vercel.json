{
  "version": 2,
  "builds": [
    {
      "src": "backend_server.py",
      "use": "@vercel/python",
      "config": {
        "maxDuration": 300
      }
    },
    {
      "src": "openoperator-ui/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/backend_server.py"
    },
    {
      "src": "/(.*)",
      "dest": "/openoperator-ui/dist/$1"
    }
  ],
  "env": {
    "PYTHONPATH": "/var/task"
  }
}